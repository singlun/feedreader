{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "windows"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-tabs": ["error", 
            {"allowIndentationTabs": true}
        ]
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended"
}